        <div class="clear"></div>
    </div>
    <div id="gedeelte">
        <div class="ColumnL">

            <div class="field">
                <div class="label">@Html.LabelFor(m => m.BoekhoofdstukId)</div>
                <div class="value">@Html.EditorFor(m => m.BoekhoofdstukId, new { Model.TaalId })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.BoekhoofdstukId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.BoekhoofdstukId)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.Hoofdstuk)</div>
                <div class="value">@Html.EditorFor(m => m.Hoofdstuk)</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.Hoofdstuk)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.Hoofdstuk)</div>
            </div>
        </div>
        <div class="clear"></div>
        <div class="ColumnMax">
            @if (!string.IsNullOrEmpty(Model.VanVers))
            {
                <div class="field">
                    <div class="label">@Html.LabelFor(m => m.VanVers)</div>
                    <div class="value">@Html.DisplayFor(m => m.VanVers)</div>
                    <div class="tooltip">@Html.ToolTipFor(m => m.VanVers)</div>
                    <div class="validator">@Html.ValidationMessageFor(m => m.VanVers)</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.TotVers))
            {
                <div class="field">
                    <div class="label">@Html.LabelFor(m => m.TotVers)</div>
                    <div class="value">@Html.DisplayFor(m => m.TotVers)</div>
                    <div class="tooltip">@Html.ToolTipFor(m => m.TotVers)</div>
                    <div class="validator">@Html.ValidationMessageFor(m => m.TotVers)</div>
                </div>
            }
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.VersVanId)</div>
                <div class="value">@Html.EditorFor(m => m.VersVanId, new { onchange = "prekenweb.updateAutomatischeBijbeltekst", VersOmschrijving = !Model.VersVanId.HasValue || Model.BoekHoofdstukTekst_VersVanId == null ? "" : Model.BoekHoofdstukTekst_VersVanId.Omschrijving })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.VersVanId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.VersVanId)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.VersTotId)</div>
                <div class="value">@Html.EditorFor(m => m.VersTotId, new { onchange = "prekenweb.updateAutomatischeBijbeltekst", VersOmschrijving = !Model.VersTotId.HasValue || Model.BoekHoofdstukTekst_VersTotId == null ? "" : Model.BoekHoofdstukTekst_VersTotId.Omschrijving })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.VersTotId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.VersTotId)</div>
            </div>
        </div>
        <div class="clear"></div>
        <div class="ColumnMax">
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.VersOmschrijving)</div>
                <div class="value">@Html.EditorFor(m => m.VersOmschrijving)</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.VersOmschrijving)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.VersOmschrijving)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.AutomatischeTeksten)</div>
                <div class="value">
                    @Html.RadioButtonFor(m => m.AutomatischeTeksten, true, new { style = "width:20px;min-width:20px;", onclick = "automatischeTekstenChanged();", id = "AutomatischeTekstenTrue" })
                    <span>@Resources.Automatisch</span><br />
                    @Html.RadioButtonFor(m => m.AutomatischeTeksten, false, new { style = "width:20px;min-width:20px;", onclick = "automatischeTekstenChanged();", id = "AutomatischeTekstenFalse" })
                    <span>@Resources.Handmatig</span>
                </div>
                <div class="tooltip">@Html.ToolTipFor(m => m.AutomatischeTeksten)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.AutomatischeTeksten)</div>
            </div>
            <div class="field" id="HandmatigeBijbeltekst">
                <div class="tooltip">@Html.ToolTipFor(m => m.BijbeltekstOmschrijving)</div>
                <div class="label">@Html.LabelFor(m => m.BijbeltekstOmschrijving)</div>
                <div class="value">@Html.EditorFor(m => m.BijbeltekstOmschrijving)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.BijbeltekstOmschrijving)</div>
            </div>
            <div class="field" id="AutomatischeBijbeltekst">
                @*<div class="tooltip">@Html.ToolTipFor(m => m.BijbeltekstOmschrijving)</div>*@
                <div class="label">@Html.LabelFor(m => m.BijbeltekstOmschrijving)</div>
                <div class="value">
                    @Html.Action("Bijbelgedeelte", "Preek", new { area = "Website", versVanId = Model.VersVanId, versTotid = Model.VersTotId })
                </div>
                @*<div class="validator">@Html.ValidationMessageFor(m => m.BijbeltekstOmschrijving)</div>*@
            </div>

        </div>
        <div class="clear"></div>
    </div>
    <div id="punten">
        <div class="ColumnMax">
            <div class="field">
