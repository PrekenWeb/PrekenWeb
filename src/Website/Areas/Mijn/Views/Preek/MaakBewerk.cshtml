            <div class="field LezingCategorieEditor">
                <div class="label">@Html.LabelFor(m => m.LezingOmschrijving)</div>
                <div class="value">@Html.EditorFor(m => m.LezingOmschrijving)</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.LezingOmschrijving)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.LezingOmschrijving)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.GemeenteId)</div>
                <div class="value">@Html.EditorFor(m => m.GemeenteId, new { Model.TaalId })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.GemeenteId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.GemeenteId)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.PredikantId)</div>
                <div class="value">@Html.EditorFor(m => m.PredikantId, new { Model.TaalId })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.PredikantId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.PredikantId)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.SerieId)</div>
                <div class="value">@Html.EditorFor(m => m.SerieId, new { Model.TaalId })</div>
                <div class="tooltip">@Html.ToolTipFor(m => m.SerieId)</div>
                <div class="validator">@Html.ValidationMessageFor(m => m.SerieId)</div>
            </div>
            <div class="field">
                <div class="label">@Html.LabelFor(m => m.GebeurtenisId)</div>
                <div class="value">@Html.EditorFor(m => m.GebeurtenisId, new { Model.TaalId })</div>
