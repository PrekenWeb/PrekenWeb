                <div class="value">
                    <table>
                        <tr>
                            <td>@Html.EditorFor(m => m.LezenZingenSoort1)</td>
                            <td>:</td>
                            <td>@Html.EditorFor(m => m.LezenZingenOmschrijving1)</td>
                        </tr>
                        <tr>
                            <td>@Html.EditorFor(m => m.LezenZingenSoort2)</td>
                            <td>:</td>
                            <td>@Html.EditorFor(m => m.LezenZingenOmschrijving2)</td>
                        </tr>
                        <tr>
                            <td>@Html.EditorFor(m => m.LezenZingenSoort3)</td>
                            <td>:</td>
                            <td>@Html.EditorFor(m => m.LezenZingenOmschrijving3)</td>
                        </tr>
                        <tr>
                            <td>@Html.EditorFor(m => m.LezenZingenSoort4)</td>
                            <td>:</td>
                            <td>@Html.EditorFor(m => m.LezenZingenOmschrijving4)</td>
                        </tr>
                        <tr>
                            <td>@Html.EditorFor(m => m.LezenZingenSoort5)</td>
